@model List<ProductModel>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="text-center" style="margin-bottom:50px;">
	<h1>Список продуктов</h1>
</div>

<table class="table table-striped">
	<tbody>
		<tr>
			<td><h5>№</h5></td>
			<td><h5>Название</h5></td>
			<td><h5>Наименование</h5></td>
			<td><h5>Цвет</h5></td>
			<td><h5>Дата производства</h5></td>
			<td><h5>Производитель</h5></td>
			<td><h5>Страна производства</h5></td>
			<td><h5>Количество</h5></td>
			<td><h5>Склад</h5></td>
		</tr>
		@for (var i = 0; i < Model.Count; i++)
		{


			<tr>
				<td>@(i + 1)</td>
				<td>@Model[i].Name</td>
				<td>@Model[i].Type</td>
				<td>@Model[i].Color</td>
				<td>
					@if (Model[i].ProductionDateTime != null)
					{
						@Model[i].ProductionDateTime.Value.ToString("d MMMM yyyyг. hh:mm:ss");
					}
				</td>
				<td>@Model[i].ProducerName</td>
				<td>@Model[i].CountryOfProduction</td>
				<td>@Model[i].Count</td>
				<td>@Model[i].Warehouse</td>
			</tr>
		}
	</tbody>
</table>